{
    "manifest_version": 3,
    "name": "FlowZap - CRM para WhatsApp",
    "description": "Transforme o WhatsApp Web em um CRM completo. Organize contatos em Kanban, automatize atendimentos, dispare campanhas, veja relatórios e muito mais — tudo dentro do WhatsApp.",
    "version": "1.2.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "FlowZap - CRM para WhatsApp",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*",
        "https://*.supabase.co/*",
        "http://localhost:3001/*",
        "http://127.0.0.1:3001/*"
    ]
}